<%= form_for @plan_day, :html=>{:class=>'form-horizontal'} do |t| %>
  <fieldset>
    <legend>修改学习日</legend>
    <div class="control-group">
      <label class="control-label">日期</label>
      <div class="controls">
        <%= t.text_field :task_date, :disabled=>true %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">新任务</label>
      <div class="controls">
        <%= t.text_field :new_task, :disabled=>true %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">任务</label>
      <div class="controls">
        <%= t.text_field :task, :disabled=>true %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">完成任务</label>
      <div class="controls">
        <%= t.text_field :finish_task %>
      </div>
    </div>
    <%= hidden_field_tag 'return_to', request.referer %>
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn">提交</button>
        <%= link_to '返回', request.referer %>
      </div>
    </div>
  </fieldset>
<%end%>

