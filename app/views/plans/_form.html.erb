<%= form_for @plan, :html=>{:class=>'form-horizontal'} do |t| %>
  <fieldset>
    <legend><%= @plan.new_record? ? '新建计划' : '修改计划' %></legend>
    <%= render 'share/text_field', :t=>t, :obj=>@plan, :name=>:name, :label=>'名称' %>
    <%= render 'share/text_field', :t=>t, :obj=>@plan, :name=>:start_date, :label=>'开始日期' %>
    <%= render 'share/text_field', :t=>t, :obj=>@plan, :name=>:task_count, :label=>'任务数' %>
    <%= render 'share/text_field', :t=>t, :obj=>@plan, :name=>:review_plan, :label=>'复习计划' %>
    <%= render 'share/text_field', :t=>t, :obj=>@plan, :name=>:max_task_per_day, :label=>'每日最多任务数' %>
    <%= render 'share/text_field', :t=>t, :obj=>@plan, :name=>:max_new_task_per_day, :label=>'每日最多新任务数' %>
    <div class="control-group">
      <label class="control-label">说明</label>
      <div class="controls">
        <%= t.text_area :description, :size=>'60x8', :style=>"width:500px;" %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn">提交</button>
        <%= link_to '返回', plans_path%>
      </div>
    </div>
  </fieldset>
<%end%>

